<script>
    function callHangFire(queuetype) {
        var temp = $('#worknum').val();
        $.ajax({
            url: '/Home/AddTask?queuetype=' + queuetype + '&worknum=' + temp,
            success: function (data, status, jqXHR) {
                alert(data);
            }

        });
    }
    function StopHangFire() {
        $.ajax({
            url: '/Home/stopHangFire',
            success: function (data, status, jqXHR) {
                alert(data);
            }

        });
    }
    function createQueue() {
        $.ajax({
            url: '/Home/ServiceQueue',
            success: function (data, status, jqXHR) {
                alert(data);
            }
        });
    }
    function sendMail() {
        $.ajax({
            url: '/Home/SendMail',
            success: function (data, status, jqXHR) {
                alert(data);
            }
        });
    }
    function testTrans() {
        $.ajax({
            url: '/Home/testTrans',
            success: function (data, status, jqXHR) {
                alert(data);
            }
        });

    }
</script>