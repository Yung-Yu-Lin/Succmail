@{
    Layout = null;
}
@*實作jqGrid所需的js & css檔案*@
@Scripts.Render("~/jqGrid/script")
<link href="~/Scripts/lib/jqGrid/css/ui.jqgrid.css" rel="stylesheet" />
<link href="~/Scripts/lib/jquery-ui/jquery-ui.css" rel="stylesheet" />

<section ng-controller="DeptManage">
    <div class="AddDeptArea" style="padding-left:15%;">
        <button class="w3-btn w3-green w3-border w3-round" style="margin-bottom:10px;" ng-click="OpenNewDeptView()">
            @Html.Raw(Succ.Common.Global.Succ.CreateDepartment)
        </button>
        <dept-jq-grid config="DeptManage.deptconfig"></dept-jq-grid>
    </div>
</section>

<!-- 新增部門 -->
<!-- Modal -->
<div ng-controller="DeptManage" class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" style="text-align:center;" id="myModalLabel">@Html.Raw(Succ.Common.Global.Succ.AddDept)</h4>
            </div>
            <div class="modal-body" style="text-align:center;">
                <div class="new-team-info">
                    <span>@Html.Raw(Succ.Common.Global.Succ.DepartmentName)</span>
                    <input class="creat_departname" style="padding:5px;" type="text" placeholder="@Html.Raw(Succ.Common.Global.Succ.DepartmentName)" ng-model="DeptManage.DeptName" />
                    <br />
                </div>
                <!-- #region 訊息警示區域 -->
                <div class="w3-container w3-yellow" ng-show="DeptManage.ShowDeptMsg">
                    <h3>Warning!</h3>
                    <p ng-bind="DeptManage.DeptMsg"></p>
                </div>
                <!-- #endregion -->
            </div>
            <div class="modal-footer">
                <div class="new-team-check">
                    <button class="w3-btn w3-blue w3-border w3-round" style="margin-bottom:10px;" ng-click="CreateDept()">
                        <span class="glyphicon glyphicon-ok" style="color:#fff;background-color:#3e94d1"></span>
                        @Html.Raw(Succ.Common.Global.Succ.OK)
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>