<configuration>
  <configSections>
    <!-- For more information on Entity Framework configuration, visit http://go.microsoft.com/fwlink/?LinkID=237468 -->
    <section name="entityFramework" type="System.Data.Entity.Internal.ConfigFile.EntityFrameworkSection, EntityFramework, Version=6.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
    <sectionGroup name="elmah">
      <section name="security" requirePermission="false" type="Elmah.SecuritySectionHandler, Elmah" />
      <section name="errorLog" requirePermission="false" type="Elmah.ErrorLogSectionHandler, Elmah" />
      <section name="errorMail" requirePermission="false" type="Elmah.ErrorMailSectionHandler, Elmah" />
      <section name="errorFilter" requirePermission="false" type="Elmah.ErrorFilterSectionHandler, Elmah" />
    </sectionGroup>
    <!-- For more information on Entity Framework configuration, visit http://go.microsoft.com/fwlink/?LinkID=237468 -->
  </configSections>
  <connectionStrings>
    <!--SuccMail 資料庫位置設定-->
    <add name="DefaultConnection" connectionString="Data Source=127.0.0.1;Initial Catalog=SuccMailDB;Persist Security Info=True;User ID=???;Password=???;min pool size=10;" providerName="System.Data.SqlClient" />
    <add name="SuccMail" connectionString="data source=127.0.0.1;initial catalog=SuccMailDB;persist security info=True;user id=???;password=???;min pool size=10;MultipleActiveResultSets=True;App=EntityFramework" providerName="System.Data.SqlClient" />
  </connectionStrings>
  <appSettings>
    <add key="webpages:Version" value="3.0.0.0" />
    <add key="webpages:Enabled" value="false" />
    <add key="ClientValidationEnabled" value="true" />
    <add key="UnobtrusiveJavaScriptEnabled" value="true" />
    <add key="hangfire:EnableRemoteMonitorAccess" value="false" />
    <add key="elmah.mvc.disableHandler" value="false" />
    <add key="elmah.mvc.disableHandleErrorFilter" value="false" />
    <add key="elmah.mvc.requiresAuthentication" value="false" />
    <add key="elmah.mvc.IgnoreDefaultRoute" value="false" />
    <add key="elmah.mvc.allowedRoles" value="*" />
    <add key="elmah.mvc.allowedUsers" value="*" />
    <add key="elmah.mvc.route" value="elmah" />
    <add key="GooDocUrl" value="https://succmail.com" />
    <add key="RandomTime" value="20170101" />
    <!--設定Redis服務所在位置，預設為本機端-->
    <add key="RedisMasterIp" value="127.0.0.1" />
    <!--執行平台時，是否從SQL產生資料至Redis，首次執行改為True，之後就可以保持在False的狀態-->
    <add key="initRedisData" value="false" />
    <add key="initSearchtable" value="false" />
    <!--設定Redis服務通訊口號碼，預設為6379-->
    <add key="RedisMasterPort" value="6379" />
    <!--設定Redis資料庫密碼-->
    <add key="RedisMasterPwd" value="???" />
    <!--設定Redis資料庫通訊口號碼，預設為0與1-->
    <add key="SuccRedisDb" value="0" />
    <add key="HangFireDb" value="1" />
    <add key="HangFireUsers" value="F6298919-C180-4AC8-943A-8E49352ED5AA,027C0916-F2B5-4EFC-BD98-2114D39B25E0,CBAF335C-8E21-42DB-9F66-B7977EF4A248" />
    <add key="HangFireWorkerPerCup" value="5" />
    <!--設定SuccMail轉寄的MailServer-->
    <add key="SmtpServer" value="???" />
    <add key="SmtpUser" value="service@succmail.com" />
    <add key="SmtpPwd" value="???" />
    <add key="IsSSL" value="false" />
    <add key="SmtpPort" value="25" />
    <add key="enableAzureStorage" value="true" />
    <!--<add key="StorageType" value="Azure" />-->
    <add key="StorageType" value="Local" />
    <add key="FileUploadPath" value="/Upload/File/" />
    <!--檔案大小限制-->
    <add key="FileUploadSize" value="10485760" />
    <!--公司圖片大小限制-->
    <add key="LogoUploadSize" value="2097152" />
    <!--GoogleCalender-->
    <add key="listurl" value="https://www.googleapis.com/calendar/v3/users/me/calendarList?access_token=" />
    <add key="eventurl" value="https://www.googleapis.com/calendar/v3/calendars/primary/events?sendNotifications=true" />
    <add key="key" value="AIzaSyDYQVvHy7AH4LDL68_TqB4wcNLEYDoPrBY" />
    <add key="defaulturl" value="https://www.googleapis.com/calendar/v3/calendars/" />
    <!--是否要計算線上人數-->
    <add key="OnlineUserCount" value="true" />
  </appSettings>
  <system.web>
    <authentication mode="Forms">
      <forms loginUrl="/Home/Login" timeout="2880" />
    </authentication>
    <!--線上人員偵測-->
    <sessionState mode="InProc" timeout="1" cookieless="false" />
    <compilation debug="true" targetFramework="4.5.2" />
    <httpRuntime targetFramework="4.5.2" enableVersionHeader="false" maxRequestLength="61440" />
    <httpModules>
      <add name="ErrorLog" type="Elmah.ErrorLogModule, Elmah" />
      <add name="ErrorMail" type="Elmah.ErrorMailModule, Elmah" />
      <add name="ErrorFilter" type="Elmah.ErrorFilterModule, Elmah" />
    </httpModules>
    <!--自動偵測使用者使用的多國語言-->
    <globalization culture="auto" uiCulture="auto" enableClientBasedCulture="true" />
  </system.web>
  <system.webServer>
    <!--所有找不到網址都給他 Succ/Index 的畫面，但網址不要變-->
    <httpErrors errorMode="Custom" existingResponse="Replace">
      <remove statusCode="404" />
      <error statusCode="404" path="/Succ/Index" responseMode="ExecuteURL" />
    </httpErrors>
    <modules>
      <remove name="FormsAuthenticationModule" />
      <add name="ErrorLog" type="Elmah.ErrorLogModule, Elmah" preCondition="managedHandler" />
      <add name="ErrorMail" type="Elmah.ErrorMailModule, Elmah" preCondition="managedHandler" />
      <add name="ErrorFilter" type="Elmah.ErrorFilterModule, Elmah" preCondition="managedHandler" />
    </modules>
    <httpProtocol>
      <customHeaders>
        <clear />
        <remove name="X-Powerd-By" />
      </customHeaders>
    </httpProtocol>
    <validation validateIntegratedModeConfiguration="false" />
    <handlers>
      <remove name="ExtensionlessUrlHandler-Integrated-4.0" />
      <remove name="OPTIONSVerbHandler" />
      <remove name="TRACEVerbHandler" />
      <add name="ExtensionlessUrlHandler-Integrated-4.0" path="*." verb="*" type="System.Web.Handlers.TransferRequestHandler" preCondition="integratedMode,runtimeVersionv4.0" />
    </handlers>
    <security>
      <requestFiltering>
        <!-- This will handle requests up to 60MB IIS此處以B計算 -->
        <requestLimits maxAllowedContentLength="61440000" />
      </requestFiltering>
    </security>
  </system.webServer>
